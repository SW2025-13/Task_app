<!--仮ログインページ-->
<h1>ログイン</h1>

<% if flash[:alert] %>
  <div style="color: red; margin-bottom: 15px;">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with url: login_path, local: true do |f| %>

  <div>
    <p>メールアドレス（ID）</p>
    <%= f.text_field :email %>
  </div>

  <div>
    <p>パスワード</p>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "ログイン", class: "btn" %>

<% end %>

<div style="margin-top: 15px;">
  <%= link_to "新規登録はこちら", new_user_path %>
</div>
