<h1>新規作成ページ</h1>

<% if @task.errors.any? %>
  <div style="color: red;">
    <h3><%= @task.errors.count %>件のエラーがあります：</h3>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @task, local: true) do |f| %>

  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :priority, "優先度（1〜5）" %><br>
    <%= f.number_field :priority, in: 1..5 %>
  </div>

  <div>
    <%= f.label :effort, "労力（1〜5）" %><br>
    <%= f.number_field :effort, in: 1..5 %>
  </div>

  <div>
    <%= f.label :content, "説明" %><br>
    <%= f.text_area :content %>
  </div>

  <div>
    <%= f.label :deadline, "期限" %><br>
    <%= f.date_field :deadline %>
  </div>

  <%= f.submit "新規登録" %>

<% end %>
