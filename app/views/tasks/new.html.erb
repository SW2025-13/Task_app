<h1 style="
  text-align: center;
  margin: 40px 0;
">
  新規タスク作成
</h1>

<% if @task.errors.present? %>
  <div style="
    max-width: 720px;
    margin: 20px auto;
    padding: 18px;
    background-color: #ffecec;
    border-left: 6px solid #ff4d4d;
    border-radius: 6px;
    color: #b30000;
  ">
    <strong><%= @task.errors.count %>件のエラーがあります：</strong>
    <ul style="margin-top: 10px;">
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @task, local: true) do |f| %>

  <div style="
    max-width: 720px;
    margin: 0 auto 60px;
    padding: 30px;
    border-radius: 10px;
    background-color: #ffffff;
    box-shadow: 0 4px 10px rgba(0,0,0,0.08);
  ">

    <!-- 上段 -->
    <div style="display: flex; gap: 30px; margin-bottom: 25px;">

      <!-- 左カラム -->
      <div style="flex: 1;">
        <div style="margin-bottom: 18px;">
          <label style="font-weight: bold;">タイトル</label><br>
          <%= f.text_field :title,
            style: "
              width: 100%;
              padding: 8px;
              border: 1px solid #ccc;
              border-radius: 4px;
            " %>
        </div>

        <div style="margin-bottom: 18px;">
          <label style="font-weight: bold;">優先度（1〜5）</label><br>
          <%= f.number_field :priority, in: 1..5,
            style: "
              width: 100%;
              padding: 8px;
              border: 1px solid #ccc;
              border-radius: 4px;
            " %>
        </div>

        <div>
          <label style="font-weight: bold;">労力（1〜5）</label><br>
          <%= f.number_field :effort, in: 1..5,
            style: "
              width: 100%;
              padding: 8px;
              border: 1px solid #ccc;
              border-radius: 4px;
            " %>
        </div>
      </div>

      <!-- 右カラム -->
      <div style="flex: 1;">
        <label style="font-weight: bold;">説明</label><br>
        <%= f.text_area :content, rows: 9,
          style: "
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            resize: vertical;
          " %>
      </div>
    </div>

    <!-- 期限 -->
    <div style="margin-bottom: 30px;">
      <label style="font-weight: bold;">期限</label><br>
      <%= f.date_field :deadline,
        style: "
          padding: 8px;
          border: 1px solid #ccc;
          border-radius: 4px;
        " %>
    </div>

    <!-- ボタン -->
    <div style="text-align: center;">
      <%= f.submit "新規登録",
        style: "
          padding: 12px 40px;
          background-color: #2196F3;
          color: white;
          border: none;
          border-radius: 8px;
          font-size: 17px;
          font-weight: bold;
          cursor: pointer;
        " %>
    </div>

  </div>

<% end %>
