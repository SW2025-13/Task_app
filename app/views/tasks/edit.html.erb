<h1>編集ページ</h1>

<% if @task.errors.present? %>
  <div style="color: red;">
    <h3><%= @task.errors.count %>件のエラーがあります：</h3>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @task, local: true) do |f| %>

  <div style="display: flex; gap: 40px;">
    <!-- 左カラム -->
    <div>
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title %><br><br>

      <%= f.label :priority, "優先度（1〜5）" %><br>
      <%= f.number_field :priority, in: 1..5 %><br><br>

      <%= f.label :effort, "労力（1〜5）" %><br>
      <%= f.number_field :effort, in: 1..5 %>
    </div>

    <!-- 右カラム -->
    <div>
      <%= f.label :content, "説明" %><br>
      <%= f.text_area :content, rows: 8, cols: 40 %>
    </div>
  </div>

  <div style="margin-top: 20px;">
    <%= f.label :deadline, "期限" %><br>
    <%= f.date_field :deadline %>
  </div>

  <%= f.submit "更新" %>

<% end %>
